<div ng-controller="loginCtrl">
    <div class="jumbotron">
        <div class="container">
            <div class="page-header">
	            <h1>
	                Welcome! <small>Elite iBanking</small>
	            </h1>
	        </div>
	        <div class="panel panel-default">
	            <div class="panel-heading">
						  	Please log in to continue
	        		</div>
	        		<div class="panel-body">
	        			<form ng-submit="login()">
									<div class="form-group">
										<div class="input-group input-group-lg">
										  <span class="input-group-addon">Email: </span>
										  <input ng-model='userEmail' type="text" class="form-control" placeholder="Email">
										</div>
									</div>
									<div class="form-group">
										<div class="input-group input-group-lg">
										  <span class="input-group-addon">Password: </span>
										  <input ng-model='userPass' type="password" class="form-control" placeholder="password">
										  <span class="input-group-btn">
								        <button ng-click='login()' class="btn btn-default" type="button">Login</button>
								      </span>
										</div>
									</div>
									<input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;"/>
								</form>
								{{msg}}
	        		</div>
	        </div>
        </div>
    </div>
	</div>